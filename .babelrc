{
  "presets": [
    [
      "@babel/preset-typescript",
      {
        "jsxPragma": "h",
        "jsxPragmaFrag": "h.Fragment"
      }
    ],
    [
      "@babel/preset-env",
      {
        "useBuiltIns": "usage",
        "corejs": "3",
        "loose": true
      }
    ],
    [
      "@babel/preset-react",
      {
        "pragma": "h",
        "pragmaFrag": "h.Fragment",
        "throwIfNamespace": false,
        "runtime": "classic"
      }
    ]
  ],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose" : true }]
  ]
}
